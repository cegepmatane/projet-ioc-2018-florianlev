<?xml version="1.0" encoding="UTF-8"?>
<beans 
xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
>


	<bean id="montreal" class ="com.projetioc.seisme.modele.Ville">
		<property name="nom" value="Montreal"/>
	
	</bean>
	
	<bean id="sanDiego" class ="com.projetioc.seisme.modele.Ville">
		<property name="nom" value="San Diego"/>
	
	</bean>
	
	<bean id="losAngeles" class ="com.projetioc.seisme.modele.Ville">
		<property name="nom" value="Los Angeles"/>
	
	</bean>
	
	<bean id="tokyo" class ="com.projetioc.seisme.modele.Ville">
		<property name="nom" value="Tokyo"/>
	
	</bean>

	<bean id="listeDesVilles" class="com.projetioc.seisme.modele.ListeDesVilles" >
		<property name="listeVilles" ref="listeVillesPreparee"/>
		
	</bean>
	
	<bean id="listeVillesPreparee" class="org.springframework.beans.factory.config.ListFactoryBean" >
		
		<property name="sourceList">
			<list>
				<bean class ="com.projetioc.seisme.modele.Ville">
					<property name="nom" value="Montreal"/>
	
				</bean>
				
				<bean class ="com.projetioc.seisme.modele.Ville">
					<property name="nom" value="San Diego"/>
	
				</bean>
				
				<bean class ="com.projetioc.seisme.modele.Ville">
					<property name="nom" value="Los Angeles"/>
	
				</bean>
				
				<bean class ="com.projetioc.seisme.modele.Ville">
					<property name="nom" value="Tokyo"/>
	
				</bean>
			
			</list>
		</property>
		<property name="targetListClass">
			<value>java.util.ArrayList</value>
		</property>
				
	</bean>


</beans>